<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:gravity="top"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5DBDB"
>

    <TextView
            android:id="@+id/tv"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="50sp"
            android:paddingTop="40sp"
            android:gravity="right"
            android:text="0"
            android:textSize="70sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn7"
                android:text="7"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btnClr"
                android:text="⌫"
                android:background="#F59E06"
                android:textColor="#FDFEFE"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn4"
                android:text="4"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btnAdd"
                android:text="+"
                android:background="#707B7C"
                android:textColor="#FDFEFE"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btnSub"
                android:text="-"
                android:background="#707B7C"
                android:textColor="#FDFEFE"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btnPt"
                android:text="."
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btnEq"
                android:text="="
                android:background="#5484E5"

                android:textColor="#FDFEFE"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btnMul"
                android:text="×"
                android:background="#707B7C"
                android:textColor="#FDFEFE"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btSqrt"
                android:text="√"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/BtnPercent"
                android:text="%"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/BtnPow"
                android:text="^"

                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:layout_weight="@android:integer/status_bar_notification_info_maxnum"
                android:id="@+id/btnDiv"
                android:text="÷"
                android:background="#707B7C"
                android:textColor="#FDFEFE"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
